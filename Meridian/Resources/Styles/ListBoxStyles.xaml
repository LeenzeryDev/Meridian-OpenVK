    <!-- Стиль для пользовательских альбомов -->
    <Style x:Key="UserAlbumListBoxItemStyle" TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource AlbumListBoxItemStyle}">
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Стиль для разделителя в списке альбомов -->
    <Style x:Key="SeparatorItemStyle" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Margin" Value="7,5,7,5"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="IsEnabled" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Grid Margin="{TemplateBinding Padding}" HorizontalAlignment="Stretch">
                        <Rectangle Height="0.5" Fill="{DynamicResource ForegroundBrush}" Opacity="0.3" SnapsToDevicePixels="False"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

